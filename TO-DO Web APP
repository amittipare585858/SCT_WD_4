<body>
  <div class="container">
    <h2>üåà Unique Large To-Do App</h2>
    <div class="lists-bar" id="listsBar"></div>
    <form id="todoForm" autocomplete="off">
      <input type="text" id="taskInput" placeholder="New task..." required>
      <input type="date" id="dateInput" required>
      <input type="time" id="timeInput" required>
      <button type="submit">Add</button>
    </form>
    <ul id="todoList"></ul>
  </div>
  <script>
    let todoData = JSON.parse(localStorage.getItem('todoData') || 'null') || [
      { name:'Personal', tasks:[] }
    ];
    let currentList = 0;

    function save() { localStorage.setItem('todoData', JSON.stringify(todoData)); }

    function renderLists() {
      const listsBar = document.getElementById('listsBar');
      listsBar.innerHTML = '';
      todoData.forEach((lst, idx) => {
        const btn = document.createElement('button');
        btn.textContent = lst.name;
        btn.className = 'list-btn' + (idx===currentList?" active":"");
        btn.onclick = () => { currentList = idx; renderLists(); renderTasks(); };
        listsBar.appendChild(btn);

        btn.insertAdjacentHTML('beforeend', `
          <button class="list-rename-btn" title="Rename" onclick="event.stopPropagation();renameList(${idx});">‚úèÔ∏è</button>
          ${idx===0?'':`<button class="list-delete-btn" title="Delete" onclick="event.stopPropagation();deleteList(${idx});">üóëÔ∏è</button>`}
        `);
      });
      // Add new list button
      let addBtn = document.createElement('button');
      addBtn.className = 'add-list-btn';
      addBtn.textContent = '+ List';
      addBtn.onclick = () => {
        let name = prompt('Enter new list name:');
        if(name && name.trim()) {
          todoData.push({name:name.trim(), tasks:[]}); currentList=todoData.length-1;
          save(); renderLists(); renderTasks();
        }
      };
      listsBar.appendChild(addBtn);
    }

    function renderTasks() {
      const ul = document.getElementById('todoList');
      ul.innerHTML = '';
      const tasks = todoData[currentList].tasks;
      tasks.forEach((todo,i) => {
        let li = document.createElement('li');
        li.className = 'task-card'+(todo.completed?' completed':'');
        let dateStr = todo.date ? `<span class="date-section"><b>üìÖ</b> ${todo.date}</span>` : '';
        let timeStr = todo.time ? `<span class="time-section"><b>‚è∞</b> ${todo.time}</span>` : '';
        li.innerHTML = `
          <input class="check-box" type="checkbox" ${todo.completed?'checked':''} onclick="toggleComplete(${i})">
          <span>${todo.text}</span>
          ${dateStr} ${timeStr}
          <div class="task-actions">
              <button class="task-action-btn" onclick="editTask(${i})">Edit</button>
              <button class="task-action-btn" onclick="deleteTask(${i})">Delete</button>
          </div>
        `;
        ul.appendChild(li);
      });
    }

    document.getElementById('todoForm').onsubmit = function(e){
      e.preventDefault();
      let text = document.getElementById('taskInput').value.trim();
      let date = document.getElementById('dateInput').value;
      let time = document.getElementById('timeInput').value;
      if(text && date && time){
        todoData[currentList].tasks.push({text, completed:false, date, time});
        save(); renderTasks();
        this.reset();
      }
    }

    window.toggleComplete = function(i){
      todoData[currentList].tasks[i].completed = !todoData[currentList].tasks[i].completed;
      save(); renderTasks();
    }

    window.deleteTask = function(i){
      if(confirm('Delete this task?')){
        todoData[currentList].tasks.splice(i,1);
        save(); renderTasks();
      }
    }

    window.editTask = function(i){
      let newText = prompt('Edit task:', todoData[currentList].tasks[i].text);
      if(newText && newText.trim()!=''){
        todoData[currentList].tasks[i].text = newText.trim();
        save(); renderTasks();
      }
    }

    window.renameList = function(i){
      let name = prompt('Rename list:', todoData[i].name);
      if(name && name.trim()){
        todoData[i].name = name.trim();
        save(); renderLists();
      }
    }
    window.deleteList = function(i){
      if(i===0) return; // don't delete first list
      if(confirm(`Delete list '${todoData[i].name}' with all its tasks?`)){
        todoData.splice(i,1);
        currentList=0;
        save(); renderLists(); renderTasks();
      }
    }

    renderLists();
    renderTasks();
  </script>
</body>
</html>
